{
    "app-id": "com.example.FlatpakDemo",
    "runtime": "com.redhat.Platform",
    "runtime-version": "el9",
    "sdk": "com.redhat.Sdk",
    "command": "main.py",
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=wayland",
        "--talk-name=org.freedesktop.portal.Desktop",
        "--device=all"
    ],
    "modules": [
        {
            "name": "FlatpakDemo",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install -r requirements.txt"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../src"
                }
            ]
        },
        {
            "name": "fuse",
            "buildsystem": "simple",
            "build-commands": [
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libfuse/libfuse/releases/download/fuse-3.10.5/fuse-3.10.5.tar.xz",
                    "sha256": "b2e283485d47404ac896dd0bb7f7ba81e1470838e677e45f659804c3a3b69666"
                }
            ]
        }
    ],
    "icon": "assets/icon.svg"
}